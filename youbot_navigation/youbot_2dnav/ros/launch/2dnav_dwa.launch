<?xml version="1.0"?>
<launch>

	<arg name="map" default="$(find youbot_env)/$(env ROBOT_ENV)/map.yaml" />

	<!--- Run map_server -->
	<node name="map_server" pkg="map_server" type="map_server" args="$(arg map)"/>

	<!--- Run AMCL -->
	<include file="$(find youbot_2dnav)/ros/launch/amcl_omni.launch" />

	<!--- Run move base -->
	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
		<remap from="cmd_vel" to="base_controller/command"/>
		<remap from="odom" to="base_controller/odometry"/>

   		<!-- Use the dwa local planner for the PR2 -->
    		<param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />


		<!--- load common configuration files -->
		<rosparam file="$(find youbot_2dnav)/ros/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
		<rosparam file="$(find youbot_2dnav)/ros/config/costmap_common_params.yaml" command="load" ns="local_costmap" />

		<!--- load global navigation specific parameters -->
		<rosparam file="$(find youbot_2dnav)/ros/config/global/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find youbot_2dnav)/ros/config/global/global_costmap_params.yaml" command="load" />

		<!--- load planner parameters -->
    		<rosparam file="$(find youbot_2dnav)/ros/config/dwa_local_planner.yaml" command="load" ns="DWAPlannerROS" />
	</node>

	<!-- Robot pose ekf -->
	<include file="$(find youbot_2dnav)/ros/launch/robot_pose_ekf.launch" />

</launch>
